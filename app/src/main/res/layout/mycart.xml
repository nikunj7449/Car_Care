<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyCart">
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/home_background1_jpeg"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="My Cart"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>


    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="45dp"
        android:layout_height="27dp"
        android:layout_above="@+id/listviewDD"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/back_arrow_4" />

    <ListView
        android:id="@+id/listviewDD"
        android:layout_width="match_parent"
        android:layout_height="760dp"
        android:layout_below="@+id/Title"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-18dp"
        android:layout_marginBottom="150dp">


    </ListView>

    <TextView
        android:id="@+id/Appointmnet_time"
        android:layout_width="180dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/baseline_timer_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="date"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Enter Time"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/Appointmnet_date"
        android:layout_width="180dp"
        android:layout_height="74dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/baseline_calendar_month_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="date"
        android:layout_marginEnd="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Enter Date"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/totalcost"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="0dp"
        android:text="Total Cost"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/baseline_currency_rupee_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:layout_marginStart="10dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:textSize="18sp"></TextView>

    <Button
        android:id="@+id/checkout"
        android:textSize="20dp"
        android:layout_width="180dp"
        android:layout_marginEnd="10dp"

        android:layout_height="74dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="0dp"
        android:text="CheckOut" />


</RelativeLayout>